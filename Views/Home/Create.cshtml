@model CheckYourStocks.Models.Stock
@{
    ViewBag.Title = "Добавление пользователя";
}
<a asp-action="Menu">Вернутся в меню</a>
    <form asp-action="create" asp-controller="home">
        <div class="form-group">
            <label asp-for="Date" class="control-label">Дата</label>
            <input type="text" asp-for="Date" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Name" class="control-label">Название</label>
            <input type="number" asp-for="Name" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Cost" class="control-label">Стоимость</label>
            <input type="number" asp-for="Cost" class="form-control" />
        </div>
        <div class="form-group">
            <input type="submit" value="Отправить" class="btn btn-default" />
        </div>
    </form>

